# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Application
APP_NAME="Commodities Compass"
APP_VERSION="1.0.0"
DEBUG=true

# API Configuration
API_V1_STR="/api/v1"
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
BACKEND_PORT=8000

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_API_AUDIENCE=https://api.commodities-compass.com
AUTH0_ISSUER=https://your-auth0-domain.auth0.com/
AUTH0_ALGORITHMS=["RS256"]

# Database
DATABASE_URL="postgresql+asyncpg://postgres:password@localhost:5433/commodities_compass"
DATABASE_SYNC_URL="postgresql://postgres:password@localhost:5433/commodities_compass"

# Redis
REDIS_URL="redis://localhost:6380/0"

# Google Sheets Configuration
GOOGLE_SHEETS_CREDENTIALS_JSON='{}'
SPREADSHEET_ID="your-google-spreadsheet-id"

# Google Drive Configuration (uses same credentials as Sheets by default)
# GOOGLE_DRIVE_CREDENTIALS_JSON={}  # Optional: Override with separate credentials
GOOGLE_DRIVE_AUDIO_FOLDER_ID="your-google-drive-folder-id"  # REQUIRED: Folder ID containing audio files

# External APIs
WEATHER_API_KEY=""
NEWS_API_KEY=""

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
S3_BUCKET_NAME=""
